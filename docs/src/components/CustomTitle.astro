---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/SiteTitle.astro';
const localte={
    es:{
        label:'Ejemplos'
    },
    en:{
        label:'Examples'
    }

}
const {label}=localte[Astro.props.locale=='es'?'es':'en']
---

<div class="flex flex-row items-center gap-6 max-sm:gap-2">
    <Default {...Astro.props}/>
    <div class="h-8 border-solid border-[1px] border-accent-600 dark:border-accent-200 max-sm:hidden" />
    <a href="./example/vertical-list/single-vertical-list/" class="no-underline max-sm:hidden">
        <span class="text-2xl max-sm:text-base text-accent-600 dark:text-accent-200 font-semibold transition-colors">{label}</span>
    </a>
</div>