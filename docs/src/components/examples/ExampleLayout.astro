---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
const {pathname}= Astro.url
const basicHref='/example/vertical-list/single-vertical-list/'
const singleHorinzontal='/example/horizontal-list/single-horizontal-list/'
const singleVerticalOnScrollContainer='/example/vertical-list/single-vertical-list-autoscroll/'
const singleHorinzontalOnScrollContainer='/example/horizontal-list/single-horizontal-list-autoscroll/'


interface Props {
   title: string;
}
const getItem=(label:string,href:string)=>{
  return { label, href,  isCurrent: href===pathname }
}
---

<StarlightPage   
  sidebar={[
      { label: 'VueFluidDnD', href: '/' },
      {
        label: 'Single vertical list',
        items: [
          getItem('basic',basicHref),
          getItem('vertical list on a scroll container',singleVerticalOnScrollContainer),
        ],
      },
      {
        label: 'Single horizontal list',
        items: [
           getItem('basic',singleHorinzontal),
           getItem('horizontal list on a scroll container',singleHorinzontalOnScrollContainer),

        ],
      },
    ]} 
  frontmatter={{ ...Astro.props, description:'Sorting a list of pokemons with vue-fluid-dnd' ,tableOfContents:false }}  >
  <slot/>
</StarlightPage>
