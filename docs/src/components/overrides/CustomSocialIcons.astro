---
import type { Props } from "@astrojs/starlight/props"
import Default from "@astrojs/starlight/components/SocialIcons.astro"
import Start from "../icons/start.astro"
import Github from "../icons/logos/github.astro";

async function getGitHubStarsNoAuth(owner:string, repo:string  ) {
  try {
    // This uses the public API with limited requests (60/hour)
    const response = await fetch(`https://api.github.com/repos/${owner}/${repo}`);
    const data = await response.json();
    return data.stargazers_count;
  } catch (error) {
    console.error('Error fetching GitHub stars:', error);
    return null;
  }
}
const githubStars = await getGitHubStarsNoAuth("carlosjorger", "fluid-dnd")
const githubRepo = "https://github.com/carlosjorger/fluid-dnd"

---
<a href={githubRepo} class="flex no-underline text-gray-700 dark:text-gray-300 items-center gap-2 pr-0 hover:opacity-65"><Start height="16" width="16" class="text-[#facc15]"/> <span>{githubStars}</span> <Github class="text-accent-600 dark:text-accent-200" width="16" height="16"/></a>

<Default {...Astro.props}><slot /> </Default>
